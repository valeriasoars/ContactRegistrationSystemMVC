@model ContactModel

@{
    ViewData["Title"] = "Create Contact";
}

<div class="text-center">

    <h1 class="display 4">Cadastrar contato</h1>

</div>

<form asp-controller="Contact" asp-action="CreateContact" method="post">

    <div class="form-group">
        <label for=name">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome">
    </div>

    <div class="form-group">
        <label for=email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
    </div>

    <div class="form-group">
        <label for="celphone">Celular</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Digite o numero para contato">
    </div>

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controler="Contact" asp-action="Index" role="button" >Voltar</a>

</form>




